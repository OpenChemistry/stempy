{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "description": "Debug build with VTKm disabled and MPI disabled",
            "binaryDir": "${sourceDir}/output/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "stempy_ENABLE_VTKm": "OFF",
                "stempy_ENABLE_MPI": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "description": "Build using the debug configuration",
            "jobs": 4
        }
    ]
}